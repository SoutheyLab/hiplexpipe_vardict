# Default settings for the pipeline stages.
# These can be overridden in the stage settings below.

defaults:
    # Number of CPU cores to use for the task
    cores: 1
    # Maximum memory in gigabytes for a cluster job
    mem: 4
    # M3 account for quota
    account: vh83
    queue: com
    # Maximum allowed running time on the cluster in Hours:Minutes
    walltime: '01:00'
    # Load modules for running a command on the cluster.
    modules:
    # Run on the local machine (where the pipeline is run)
    # instead of on the cluster. False means run on the cluster.
    local: False

# Stage-specific settings. These override the defaults above.
# Each stage must have a unique name. This name will be used in
# the pipeine to find the settings for the stage.

stages:
    # Align paired end FASTQ files to the reference
    align_bwa:
        queue: com
        cores: 4
        walltime: '00:30'
        mem: 16
        modules:
            - 'bwa/0.7.12'
            - 'samtools/1.7'
            - 'gnuparallel/20160822'

    apply_undr_rover:
        queue: com
        cores: 1
        walltime: '06:00'
        mem: 4
        modules:
            - 'gatk/3.7'

    # Sort the BAM file with Picard
#    sort_bam_picard:
#        queue: com
#        cores: 1
#        walltime: '00:30'
#        mem: 4
#        modules:
#            - 'picard/2.9.2'

#    primary_bam:
#        queue: com
#        cores: 1
#        walltime: '00:30'
#        modules:
#            - 'samtools/1.7'

#    index_sort_bam_picard:
#        queue: com
#        walltime: '00:30'
#        mem: 4
#        modules:
#            - 'picard/2.9.2'
#            - 'samtools/1.7'

    call_haplotypecaller_gatk:
        queue: com
        walltime: '00:30'
        cores: 4
        mem: 16
        modules:
            - 'gatk/3.7'

    # Combine G.VCF files for all samples using GATK
    combine_gvcf_gatk:
        queue: com
        cores: 1
        walltime: '01:00'
        mem: 30
        modules:
            - 'gatk/3.7'

    # Genotype G.VCF files using GATK
    genotype_gvcf_gatk:
        queue: com
        cores: 8
        walltime: '00:30'
        mem: 32
        modules:
            - 'gatk/3.7'

    genotype_filter_gatk:
        queue: com
        walltime: '00:30'
        mem: 16
        modules:
            - 'gatk/3.7'

    vt_decompose_normalise:
        queue: com
        cores: 1
        walltime: '00:20'
        mem: 8
        modules:
            - 'vt/0.57'

    variant_annotator_gatk:
        queue: com
        walltime: '00:30'
        mem: 32
        cores: 8
        modules:
            - 'gatk/3.7'

    gatk_filter:
        queue: com
        walltime: '00:30'
        mem: 16
        modules:
            - 'gatk/3.7'

    # run VEP annotation
    apply_vep:
        queue: com
        cores: 24
        mem: 100
        walltime: '00:30'
        modules:
            - 'vep/90'

    intersect_bed:
        queue: com
        walltime: '00:10'
        mem: 8
        modules:
            - 'bedtools/2.26.0'

    coverage_bed:
        queue: com
        walltime: '00:10'
        mem: 8
        modules:
            - 'bedtools/2.26.0'

    genome_reads:
        queue: com
        walltime: '00:10'
        mem: 2
        modules:
            - 'samtools/1.7'

    target_reads:
        queue: com
        walltime: '00:10'
        mem: 2
        modules:
            - 'samtools/1.7'

    total_reads:
        queue: com
        walltime: '00:10'
        mem: 2
        modules:
            - 'samtools/1.7'

    generate_stats:
        queue: com
        walltime: '00:30'
        mem: 32
        modules:
            - 'R/3.4.3'

    generate_amplicon_metrics:
        queue: com
        walltime: '00:10'
        mem: 4
        modules:
            - 'bedtools/2.26.0'


##after undr_rover settings
    sort_vcfs:
        queue: com
        walltime: '00:30'
        mem: 4
        modules:
            - 'bcftools/1.6'

    index_vcfs:
        queue: com
        walltime: '00:30'
        mem: 2
        modules:
            - 'bcftools/1.6'

    concatenate_vcfs:
        queue: com
        walltime: '00:30'
        mem: 8
        modules:
            - 'bcftools/1.6'

    index_final_vcf:
        queue: com
        walltime: '00:30'
        mem: 8
        modules:
            - 'bcftools/1.6'

